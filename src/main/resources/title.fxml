<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
    id="AnchorPane"
    prefHeight="720"
    prefWidth="1280"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="edu.gatech.gem5.game.controllers.TitleController"
    fx:id="defaultScene"
>
    <children>

        <Label
            layoutX="700"
            layoutY="100"
            fx:id="title"
            text="Last Adventures"
        />

        <GridPane fx:id="gridPane" layoutX="700" layoutY="250">
            <vgap>10.0</vgap>
            <Button text="New"
                    id="newButton"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="1"
                    onAction="#changeScenes" 
            />
            <Button text="Continue"
                    id="continueButton"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="2"
                    onAction="#changeScenes"
            />
            <Button text="Load"
                    id="loadButton"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="3"
                    onAction="#changeScenes"
            />
        </GridPane>

    </children>
    <stylesheets>
        <URL value="@title.css" />
    </stylesheets>
</AnchorPane>
